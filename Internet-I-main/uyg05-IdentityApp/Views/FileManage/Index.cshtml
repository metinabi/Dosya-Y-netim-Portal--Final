
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdminLTE.cshtml";
}

<h3>Dosyalar</h3>

<a asp-action="Insert" class="btn btn-outline-primary">Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Sıra Numarası</th>
            <th scope="col">Dosya Adı</th>
            <th scope="col">Dosya Açıklaması</th>
            <th scope="col">Dosya Türü</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CategoryName</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-info">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Dosyayı Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Dosyayı Sil</a>
                </td>
            </tr>

            i++;

        }
    </tbody>
    </table>
